<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".AllResumeActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp"
        android:text="Resumes"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ImageViewButtonLogOut"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/logout" />

    <TextView
        android:id="@+id/TextViewLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageViewButtonLogOut"
        android:layout_alignBottom="@+id/ImageViewButtonLogOut"

        android:layout_marginTop="1dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@+id/ImageViewButtonLogOut"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecycleView_resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floating_button_add_resume"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp"
         />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_add_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/custom_edit_view"
        android:src="@drawable/ic_plus_icon"
        app:tint="@color/black"
        android:backgroundTint="@color/white"
        app:borderWidth="1dp" />





</RelativeLayout>